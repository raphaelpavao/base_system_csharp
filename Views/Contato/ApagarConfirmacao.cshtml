@model ContatoModel

@{
    ViewData["Title"] = "Apagar contato";
}

<div class="text-center">
    <h3>Confirma a exclusão do contato?</h3>

    <a class="btn btn-primary" asp-controller="Contato" asp-action="Index" role="button">Não</a>
    <a class="btn btn-danger" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Apagar" role="button">Sim</a>

</div>