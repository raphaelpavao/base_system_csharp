@model ContatoModel

@{
    ViewData["Title"] = "Cadastrar contato";
}

<h4 class="display-4">Cadastrar contato</h4>

<form asp-controller="contato" asp-action="criar" method="post">

    <div class="form-group mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group mb-3">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

        <div class="form-group mb-3">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Celular">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
 
    <button type="submit" class="btn btn-primary">Adicionar</button>
  
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>